{
  "extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node22/tsconfig"],
  "compilerOptions": {
    "noEmit": true,
    "composite": true,
    "outDir": "cli-incremental-info",
    "verbatimModuleSyntax": true,
    "noImplicitAny": false,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/__tests__/**/*"]
}
